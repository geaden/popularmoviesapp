<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Movie poster -->
        <ImageView
            android:id="@+id/movie_detail_poster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/poster"/>
        <!-- Movie title -->
        <TextView
            android:id="@+id/movie_detail_title"
            android:layout_width="wrap_content"
            tools:text="Chappi"
            android:layout_toRightOf="@id/movie_detail_poster"
            android:layout_height="wrap_content"
            style="@style/Movie.Title"/>
        <!-- Movie rating -->
        <RatingBar
            android:id="@+id/movie_detail_rating"
            android:numStars="@integer/movie_rating_stars"
            android:layout_below="@id/movie_detail_title"
            android:layout_toRightOf="@id/movie_detail_poster"
            android:layout_width="match_parent"
            android:padding="@dimen/movie_empty_padding"
            android:layout_height="wrap_content" />
        <!-- Movie overview -->
        <TextView
            android:id="@+id/movie_detail_overview"
            android:layout_below="@id/movie_detail_rating"
            android:layout_toRightOf="@id/movie_detail_poster"
            style="@style/Movie.Overview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="lorem ipsum"/>

    </RelativeLayout>

</LinearLayout>